<div id="delete-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Head -->
            <div class="modal-header">
                <button class="close" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                </button>
                <h3>
                    Kategória törlése
                </h3>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <p>
                    {{ 'kuma_admin.nested_admin.delete_confirm'|trans({'%name%' : admin.toString(object)}) }}
                </p>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <a href="{{ admin.generateObjectUrl('delete', object) }}" class="js-add-app-loading btn btn-danger btn--raise-on-hover">
                    {{ 'kuma_admin.form.delete' |trans }}
                </a>
                <button type="button" class="btn btn-default btn--raise-on-hover" data-dismiss="modal">
                    {{ 'kuma_admin.form.cancel' |trans }}
                </button>
            </div>
        </div>
    </div>
</div>
