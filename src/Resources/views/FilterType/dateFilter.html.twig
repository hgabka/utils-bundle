<div class="form-group">
    <select data-sonata-select2="false" name="{{nameprefix}}comparator{{namesuffix}}" class="form-control">
        <option value="before" {% if data.comparator is defined and data.comparator == "before" %} selected="selected" {% endif %}>{{ 'kuma_admin_list.filter.datebefore' | trans }}</option>
        <option value="after" {% if data.comparator is defined and data.comparator == "after" %} selected="selected" {% endif %}>{{ 'kuma_admin_list.filter.dateafter' | trans }}</option>
    </select>
</div>

<div class="form-group js-datepicker date" data-locale="{{ app.request.locale }}">
    <div class='input-group date' id='datetimepicker1'>
        <input type="text" class="form-control form_datepicker{{ nameprefix }}{{ namesuffix }}" name="{{nameprefix}}value{{namesuffix}}" data-date-format="YYYY-MM-DD"{% if data.value is defined %} value="{{data.value}}"{% endif %}{% if datePicker_startDate is defined %} data-startDate="{{datePicker_startDate}}"{% endif %}>
        <span class="input-group-addon">
            <span class="fa fa-calendar-o"></span>
        </span>
    </div>
</div>
