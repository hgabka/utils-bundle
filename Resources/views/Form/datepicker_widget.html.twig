{% block datepicker_widget %}
<script type="text/javascript">
  jQuery(document).ready(function() {
    jQuery('#{{form.vars.id}}').datepicker({ 
      dateFormat: '{{ format }}',
      showOn: '{{ showOn }}', 
      buttonImage: '{{ buttonImage }}',
      buttonImageOnly: {{ buttonImageOnly ? 'true' : 'false' }},
      changeMonth: {{ changeMonth ? 'true' : 'false' }},
      changeYear: {{ changeYear ? 'true' : 'false' }},
      showWeek: {{ showWeek ? 'true' : 'false' }},
      yearSuffix: '{{ yearSuffix|raw }}',
      showMonthAfterYear: {{ showMonthAfterYear ? 'true' : 'false' }},
      minDate: {{ minDate is empty ? 'null' : "'" ~ minDate ~ "'" }},
      maxDate: {{ maxDate is empty ? 'null' : "'" ~ maxDate ~ "'" }},
      numberOfMonths: {{ numberOfMonths }},
      onSelect: {{ (onSelect is empty ? 'null' : 'function (dateText, inst) {' ~ onSelect ~ ' }')| raw }},
      onClose: {{ (onClose is empty ? 'null' : 'function (dateText, inst) {' ~ onClose ~ ' }')| raw }},
      showAnim: '{{ showAnim }}'
      });
  });
</script>
    {{ form_widget(form) }}
{% endblock %}