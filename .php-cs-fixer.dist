        'no_superfluous_phpdoc_tags' => false,
        'native_function_invocation' => [
            'include' => [],
            'scope' => 'namespaced',
            'strict' => false,
        ],
    ])
    ->setRiskyAllowed(true)
    ->setFinder($finder)
